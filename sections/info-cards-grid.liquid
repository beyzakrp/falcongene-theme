{% comment %}
  Info Cards Grid - Reusable component for displaying information cards
  Use cases: Lab history, technology, stats, references, features, etc.
{% endcomment %}

<style>
  .info-cards-grid {
    padding: {{ section.settings.section_padding }}px 20px;
    background: {{ section.settings.background_color }};
  }

  .info-cards-grid__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .info-cards-grid__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .info-cards-grid__title {
    font-size: 48px;
    font-weight: 700;
    color: {{ section.settings.title_color }};
    margin-bottom: 16px;
  }

  .info-cards-grid__subtitle {
    font-size: 18px;
    color: {{ section.settings.subtitle_color }};
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .info-cards-grid__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .info-card {
    background: {{ section.settings.card_background }};
    border-radius: 16px;
    padding: 40px;
    transition: all 0.3s ease;
    border: 1px solid {{ section.settings.card_border_color }};
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  }

  .info-card__header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
  }

  .info-card__icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .info-card__icon svg {
    width: 28px;
    height: 28px;
  }

  .info-card__title {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.card_title_color }};
    margin: 0;
  }

  .info-card__content {
    color: {{ section.settings.card_text_color }};
    font-size: 16px;
    line-height: 1.7;
  }

  .info-card__content p {
    margin-bottom: 16px;
  }

  .info-card__content p:last-child {
    margin-bottom: 0;
  }

  .info-card__content strong,
  .info-card__content b {
    color: {{ section.settings.card_title_color }};
    font-weight: 600;
  }

  .info-card__stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    margin-top: 24px;
  }

  .info-card__stat {
    text-align: center;
  }

  .info-card__stat-value {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 4px;
    display: block;
  }

  .info-card__stat-label {
    font-size: 14px;
    opacity: 0.7;
    display: block;
  }

  .info-card__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .info-card__list-item {
    padding: 12px 0;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .info-card__list-item:last-child {
    border-bottom: none;
  }

  .info-card__list-item::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .info-cards-grid {
      padding: 60px 20px;
    }

    .info-cards-grid__title {
      font-size: 32px;
    }

    .info-cards-grid__subtitle {
      font-size: 16px;
    }

    .info-cards-grid__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .info-card {
      padding: 28px;
    }

    .info-card__title {
      font-size: 20px;
    }

    .info-card__stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .info-card__stat-value {
      font-size: 28px;
    }
  }
</style>

<section class="info-cards-grid">
  <div class="info-cards-grid__container">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="info-cards-grid__header">
        {% if section.settings.title != blank %}
          <h2 class="info-cards-grid__title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="info-cards-grid__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="info-cards-grid__grid">
      {% for block in section.blocks %}
        <div class="info-card" {{ block.shopify_attributes }}>
          <div class="info-card__header">
            <div class="info-card__icon" style="background: {{ block.settings.icon_background }}; color: {{ block.settings.icon_color }};">
              {% case block.settings.icon %}
                {% when 'history' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                {% when 'technology' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                {% when 'stats' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                {% when 'partners' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                {% when 'certificate' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                {% when 'lab' %}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
              {% endcase %}
            </div>
            <h3 class="info-card__title">{{ block.settings.title }}</h3>
          </div>

          <div class="info-card__content">
            {{ block.settings.content }}

            {% comment %} Stats Grid (optional) {% endcomment %}
            {% if block.settings.show_stats %}
              <div class="info-card__stats">
                {% if block.settings.stat_1_value != blank %}
                  <div class="info-card__stat">
                    <span class="info-card__stat-value" style="color: {{ block.settings.icon_color }};">
                      {{ block.settings.stat_1_value }}
                    </span>
                    <span class="info-card__stat-label">{{ block.settings.stat_1_label }}</span>
                  </div>
                {% endif %}
                {% if block.settings.stat_2_value != blank %}
                  <div class="info-card__stat">
                    <span class="info-card__stat-value" style="color: {{ block.settings.icon_color }};">
                      {{ block.settings.stat_2_value }}
                    </span>
                    <span class="info-card__stat-label">{{ block.settings.stat_2_label }}</span>
                  </div>
                {% endif %}
                {% if block.settings.stat_3_value != blank %}
                  <div class="info-card__stat">
                    <span class="info-card__stat-value" style="color: {{ block.settings.icon_color }};">
                      {{ block.settings.stat_3_value }}
                    </span>
                    <span class="info-card__stat-label">{{ block.settings.stat_3_label }}</span>
                  </div>
                {% endif %}
                {% if block.settings.stat_4_value != blank %}
                  <div class="info-card__stat">
                    <span class="info-card__stat-value" style="color: {{ block.settings.icon_color }};">
                      {{ block.settings.stat_4_value }}
                    </span>
                    <span class="info-card__stat-label">{{ block.settings.stat_4_label }}</span>
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {% comment %} List Items (optional) {% endcomment %}
            {% if block.settings.list_items != blank %}
              <ul class="info-card__list">
                {% assign items = block.settings.list_items | split: '||' %}
                {% for item in items %}
                  <li class="info-card__list-item" style="--bullet-color: {{ block.settings.icon_color }};">
                    <style>
                      .info-card__list-item::before {
                        background: var(--bullet-color);
                      }
                    </style>
                    {{ item }}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

