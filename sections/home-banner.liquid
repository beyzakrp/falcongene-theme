{% comment %}
  Home Banner - Split screen hero with image and content panel
{% endcomment %}

<style>
  @font-face {
    font-family: 'Garamond Premier Pro Italic';
    src: url('https://cdn.shopify.com/s/files/1/0484/1429/4167/files/Garamond_Premier_Pro_Italic.ttf?v=1764160060') format('truetype');
    font-weight: normal;
    font-style: italic;
  }
  @font-face {
    font-family: 'Aesthet Nova Medium';
    src: url('https://cdn.shopify.com/s/files/1/0484/1429/4167/files/fonnts.com-Aesthet-Nova-Medium.otf?v=1764160662') format('opentype');
    font-weight: 500;
    font-style: normal;
  }
</style>

<style>
  .home-banner {
    position: relative;
    width: 100%;
    display: flex;
    min-height: {{ section.settings.min_height_desktop }}px;
    overflow: hidden;
  }

  .home-banner__image-section {
    flex: {{ section.settings.image_width_percentage }};
    position: relative;
    overflow: hidden;
  }

  .home-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_position }};
  }

  .home-banner__image--mobile {
    display: none;
  }

  .home-banner__content-section {
    flex: {{ 100 | minus: section.settings.image_width_percentage }};
    background: {{ section.settings.content_background }};
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 80px;
    position: relative;
  }

  .home-banner__content {
    max-width: 600px;
    width: 100%;
    text-align: {{ section.settings.content_alignment }};
  }

  .home-banner__badge {
    display: inline-block;
    padding: 8px 20px;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_color }};
    font-size: 14px;
    font-weight: 600;
    border-radius: 24px;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .home-banner__title {
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-size: {{ section.settings.title_size_desktop }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    line-height: 1.1;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .home-banner__subtitle {
    font-family: {{ section.settings.subtitle_font }}, serif;
    font-size: {{ section.settings.subtitle_size_desktop }}px;
    font-style: italic;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 16px;
    line-height: 1.2;
    text-transform: uppercase;
  }

  .home-banner__discount {
    font-family: {{ section.settings.subtitle_font }}, serif;
    font-size: {{ section.settings.discount_size_desktop }}px;
    font-weight: 700;
    font-style: italic;
    color: {{ section.settings.discount_color }};
    line-height: 1;
    margin-bottom: 24px;
  }

  .home-banner__description {
    font-size: 16px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .home-banner__buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: {{ section.settings.content_alignment }};
  }

  .home-banner__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 2px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
    white-space: nowrap;
  }

  .home-banner__button--primary {
    background: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_color }};
    border-color: {{ section.settings.primary_button_bg }};
  }

  .home-banner__button--primary:hover {
    background: transparent;
    color: {{ section.settings.primary_button_color }};
    border-color: {{ section.settings.primary_button_color }};
  }

  .home-banner__button--secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_color }};
    border-color: {{ section.settings.secondary_button_color }};
  }

  .home-banner__button--secondary:hover {
    background: {{ section.settings.secondary_button_color }};
    color: {{ section.settings.content_background }};
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .home-banner {
      flex-direction: column;
      min-height: {{ section.settings.min_height_mobile }}px;
    }

    .home-banner__image-section {
      flex: none;
      height: 60vh;
      min-height: 400px;
    }

    .home-banner__image--desktop {
      display: none;
    }

    .home-banner__image--mobile {
      display: block;
    }

    .home-banner__content-section {
      flex: none;
      padding: 40px 24px;
    }

    .home-banner__content {
      text-align: center;
    }

    .home-banner__title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    .home-banner__subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }

    .home-banner__discount {
      font-size: {{ section.settings.discount_size_mobile }}px;
    }

    .home-banner__description {
      font-size: 14px;
    }

    .home-banner__buttons {
      justify-content: center;
      flex-direction: column;
      align-items: stretch;
    }

    .home-banner__button {
      padding: 14px 24px;
      width: 100%;
    }
  }

  /* Hide empty images */
  img:not([src]),
  img[src=""] {
    display: none;
  }
</style>

<section id="section-{{ section.id }}" class="home-banner">
  {% comment %} Image Section (Left) {% endcomment %}
  <div class="home-banner__image-section">
    {% if section.settings.image_desktop != blank %}
      <img
        id="home-banner-image-desktop"
        class="home-banner__image home-banner__image--desktop"
        src="{{ section.settings.image_desktop | image_url: width: 1600 }}"
        srcset="{{ section.settings.image_desktop | image_url: width: 800 }} 800w,
                {{ section.settings.image_desktop | image_url: width: 1200 }} 1200w,
                {{ section.settings.image_desktop | image_url: width: 1600 }} 1600w"
        sizes="(max-width: 1024px) 100vw, {{ section.settings.image_width_percentage }}vw"
        alt="{{ section.settings.image_desktop.alt | default: section.settings.title }}"
        loading="eager"
        fetchpriority="high"
      >
    {% endif %}

    {% if section.settings.image_mobile != blank %}
      <img
        id="home-banner-image-mobile"
        class="home-banner__image home-banner__image--mobile"
        src="{{ section.settings.image_mobile | image_url: width: 800 }}"
        srcset="{{ section.settings.image_mobile | image_url: width: 400 }} 400w,
                {{ section.settings.image_mobile | image_url: width: 600 }} 600w,
                {{ section.settings.image_mobile | image_url: width: 800 }} 800w"
        sizes="100vw"
        alt="{{ section.settings.image_mobile.alt | default: section.settings.title }}"
        loading="eager"
        fetchpriority="high"
      >
    {% endif %}
  </div>

  {% comment %} Content Section (Right) {% endcomment %}
  <div class="home-banner__content-section">
    <div class="home-banner__content">
      {% if section.settings.badge_text != blank %}
        <span class="home-banner__badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1 class="home-banner__title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="home-banner__subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      {% if section.settings.discount != blank %}
        <div class="home-banner__discount">{{ section.settings.discount }}</div>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="home-banner__description">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.button_primary_text != blank or section.settings.button_secondary_text != blank %}
        <div class="home-banner__buttons">
          {% if section.settings.button_primary_text != blank %}
            <a href="{{ section.settings.button_primary_link }}" class="home-banner__button home-banner__button--primary">
              {{ section.settings.button_primary_text }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a href="{{ section.settings.button_secondary_link }}" class="home-banner__button home-banner__button--secondary">
              {{ section.settings.button_secondary_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

