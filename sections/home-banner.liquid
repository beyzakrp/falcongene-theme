{% comment %}
  Home Banner - Hero section with custom fonts and responsive images
{% endcomment %}

<style>
  @font-face {
    font-family: 'Garamond Premier Pro Italic';
    src: url('https://cdn.shopify.com/s/files/1/0484/1429/4167/files/Garamond_Premier_Pro_Italic.ttf?v=1764160060') format('truetype');
    font-weight: normal;
    font-style: italic;
  }
  @font-face {
    font-family: 'Aesthet Nova Medium';
    src: url('https://cdn.shopify.com/s/files/1/0484/1429/4167/files/fonnts.com-Aesthet-Nova-Medium.otf?v=1764160662') format('opentype');
    font-weight: 500;
    font-style: normal;
  }
</style>

<style>
  .home-banner {
    position: relative;
    width: 100%;
    height: auto;
    min-height: {{ section.settings.min_height_desktop }}px;
    overflow: hidden;
    background: {{ section.settings.background_color }};
  }

  .home-banner__image-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: inherit;
  }

  .home-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .home-banner__image--mobile {
    display: none;
  }

  .home-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
  }

  .home-banner__content {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    max-width: 600px;
    padding: 40px;
  }

  .home-banner__content--left {
    left: {{ section.settings.content_position_left }}%;
  }

  .home-banner__content--center {
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .home-banner__content--right {
    right: {{ section.settings.content_position_right }}%;
    left: auto;
  }

  .home-banner__badge {
    display: inline-block;
    padding: 8px 20px;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_color }};
    font-size: 14px;
    font-weight: 600;
    border-radius: 24px;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .home-banner__title {
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-size: {{ section.settings.title_size_desktop }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    line-height: 1.2;
    margin-bottom: 16px;
  }

  .home-banner__subtitle {
    font-family: {{ section.settings.subtitle_font }}, serif;
    font-size: {{ section.settings.subtitle_size_desktop }}px;
    font-style: italic;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 24px;
    line-height: 1.3;
  }

  .home-banner__description {
    font-size: 18px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .home-banner__buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .home-banner__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .home-banner__button--primary {
    background: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_color }};
    border-color: {{ section.settings.primary_button_bg }};
  }

  .home-banner__button--primary:hover {
    background: transparent;
    color: {{ section.settings.primary_button_bg }};
    border-color: {{ section.settings.primary_button_bg }};
  }

  .home-banner__button--secondary {
    background: transparent;
    color: {{ section.settings.secondary_button_color }};
    border-color: {{ section.settings.secondary_button_color }};
  }

  .home-banner__button--secondary:hover {
    background: {{ section.settings.secondary_button_color }};
    color: {{ section.settings.secondary_button_hover_color }};
  }

  /* Mobile Gradient Overlay */
  .home-banner__mobile-gradient {
    display: none;
  }

  /* Responsive Styles */
  @media (max-width: 1008px) {
    .home-banner {
      min-height: {{ section.settings.min_height_mobile }}px;
    }

    .home-banner__image--desktop {
      display: none;
    }

    .home-banner__image--mobile {
      display: block;
    }

    .home-banner__mobile-gradient {
      display: block;
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 60%;
      background: linear-gradient(
        to top,
        rgba(0, 0, 0, 0.8),
        rgba(0, 0, 0, 0) 100%
      );
      pointer-events: none;
      z-index: 1;
    }

    .home-banner__content {
      position: absolute;
      bottom: 40px;
      top: auto;
      left: 20px;
      right: 20px;
      transform: none;
      max-width: 100%;
      padding: 20px;
      text-align: center;
    }

    .home-banner__title {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    .home-banner__subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }

    .home-banner__description {
      font-size: 16px;
    }

    .home-banner__buttons {
      justify-content: center;
    }

    .home-banner__button {
      padding: 12px 24px;
      font-size: 14px;
    }
  }

  @media (min-width: 1500px) {
    .home-banner__content--right {
      right: calc(190px + (var(--horizontal-spacing-four-products-per-row) / 2));
    }

    .home-banner__content--left {
      left: calc(190px + (var(--horizontal-spacing-four-products-per-row) / 2));
    }
  }

  @media (min-width: 1250px) and (max-width: 1500px) {
    .home-banner__content--right {
      right: 10%;
    }

    .home-banner__content--left {
      left: 10%;
    }
  }

  @media (min-width: 1008px) and (max-width: 1250px) {
    .home-banner__content--right {
      right: 5%;
    }

    .home-banner__content--left {
      left: 5%;
    }
  }

  /* Hide empty images */
  img:not([src]),
  img[src=""] {
    display: none;
  }
</style>

<section id="section-{{ section.id }}" class="home-banner">
  <div class="home-banner__image-container">
    {% comment %} Desktop Image {% endcomment %}
    {% if section.settings.image_desktop != blank %}
      <img
        id="home-banner-image-desktop"
        class="home-banner__image home-banner__image--desktop"
        src="{{ section.settings.image_desktop | image_url: width: 2400 }}"
        srcset="{{ section.settings.image_desktop | image_url: width: 1200 }} 1200w,
                {{ section.settings.image_desktop | image_url: width: 1600 }} 1600w,
                {{ section.settings.image_desktop | image_url: width: 2000 }} 2000w,
                {{ section.settings.image_desktop | image_url: width: 2400 }} 2400w"
        sizes="100vw"
        alt="{{ section.settings.image_desktop.alt | default: section.settings.title }}"
        loading="eager"
        fetchpriority="high"
      >
    {% endif %}

    {% comment %} Mobile Image {% endcomment %}
    {% if section.settings.image_mobile != blank %}
      <img
        id="home-banner-image-mobile"
        class="home-banner__image home-banner__image--mobile"
        src="{{ section.settings.image_mobile | image_url: width: 800 }}"
        srcset="{{ section.settings.image_mobile | image_url: width: 400 }} 400w,
                {{ section.settings.image_mobile | image_url: width: 600 }} 600w,
                {{ section.settings.image_mobile | image_url: width: 800 }} 800w"
        sizes="100vw"
        alt="{{ section.settings.image_mobile.alt | default: section.settings.title }}"
        loading="eager"
        fetchpriority="high"
      >
    {% endif %}

    {% comment %} Overlay {% endcomment %}
    {% if section.settings.show_overlay %}
      <div class="home-banner__overlay"></div>
    {% endif %}

    {% comment %} Mobile Gradient {% endcomment %}
    {% if section.settings.show_mobile_gradient %}
      <div class="home-banner__mobile-gradient"></div>
    {% endif %}

    {% comment %} Content {% endcomment %}
    <div class="home-banner__content home-banner__content--{{ section.settings.content_alignment }}">
      {% if section.settings.badge_text != blank %}
        <span class="home-banner__badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h1 class="home-banner__title">{{ section.settings.title }}</h1>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <div class="home-banner__subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="home-banner__description">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.button_primary_text != blank or section.settings.button_secondary_text != blank %}
        <div class="home-banner__buttons">
          {% if section.settings.button_primary_text != blank %}
            <a href="{{ section.settings.button_primary_link }}" class="home-banner__button home-banner__button--primary">
              {{ section.settings.button_primary_text }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a href="{{ section.settings.button_secondary_link }}" class="home-banner__button home-banner__button--secondary">
              {{ section.settings.button_secondary_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% if section.settings.mobile_click_link != blank %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const mobileImage = document.getElementById('home-banner-image-mobile');
      if (mobileImage && window.innerWidth <= 1008) {
        mobileImage.style.cursor = 'pointer';
        mobileImage.addEventListener('click', function() {
          window.location.href = "{{ section.settings.mobile_click_link }}";
        });
      }
    });
  </script>
{% endif %}

