      max-height: 85vh;
    }
    
    .hero-reference-modal__close {
      top: -40px;
    }
    
    .hero-reference-modal__nav {
      width: 40px;
      height: 40px;
    }
    
    .hero-reference-modal__nav--prev {
      left: 5px;
    }
    
    .hero-reference-modal__nav--next {
      right: 5px;
    }
    
    .hero-reference-modal__image {
      max-height: 70vh;
    }
  }
{% endstylesheet %}

{% javascript %}
  class HeroReferenceModal {
    constructor(sectionId) {
      this.sectionId = sectionId;
      this.modal = document.getElementById(`modal-${sectionId}`);
      if (!this.modal) return;
      
      this.currentIndex = 0;
      this.items = this.modal.querySelectorAll('.hero-reference-modal__item');
      this.prevBtn = this.modal.querySelector('[data-modal-nav="prev"]');
      this.nextBtn = this.modal.querySelector('[data-modal-nav="next"]');
      
      this.init();
    }
    
    init() {
      // Open modal
      const trigger = document.querySelector(`[data-modal-open="${this.sectionId}"]`);
      if (trigger) {
        trigger.addEventListener('click', () => this.open());
      }
      
      // Close modal
      const closeButtons = this.modal.querySelectorAll(`[data-modal-close="${this.sectionId}"]`);
      closeButtons.forEach(btn => {
        btn.addEventListener('click', () => this.close());
      });
      
      // Navigation
      if (this.prevBtn) {
        this.prevBtn.addEventListener('click', () => this.prev());
      }
      if (this.nextBtn) {
        this.nextBtn.addEventListener('click', () => this.next());
      }
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (this.modal.getAttribute('aria-hidden') === 'false') {
          if (e.key === 'Escape') this.close();
          if (e.key === 'ArrowLeft') this.prev();
          if (e.key === 'ArrowRight') this.next();
        }
      });
      
      // Show first item
      this.showItem(0);
    }
    
    open() {
      this.modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      
      // Pause all videos initially
      this.pauseAllVideos();
      
      // Play video if current item is video
      const currentItem = this.items[this.currentIndex];
      const video = currentItem?.querySelector('video');
      if (video) video.play();
    }
    
    close() {
      this.modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      
      // Pause all videos
      this.pauseAllVideos();
    }
    
    showItem(index) {
      this.items.forEach((item, i) => {
        item.classList.toggle('is-active', i === index);
      });
      
      this.currentIndex = index;
      this.updateNavButtons();
      
      // Pause all videos
      this.pauseAllVideos();
      
      // Play video if current item is video
      const currentItem = this.items[this.currentIndex];
      const video = currentItem?.querySelector('video');
      if (video && this.modal.getAttribute('aria-hidden') === 'false') {
        video.play();
      }
    }
    
    prev() {
      const newIndex = this.currentIndex > 0 ? this.currentIndex - 1 : this.items.length - 1;
      this.showItem(newIndex);
    }
    
    next() {
      const newIndex = this.currentIndex < this.items.length - 1 ? this.currentIndex + 1 : 0;
      this.showItem(newIndex);
    }
    
    updateNavButtons() {
      if (this.items.length <= 1) {
        if (this.prevBtn) this.prevBtn.classList.add('is-hidden');
        if (this.nextBtn) this.nextBtn.classList.add('is-hidden');
      }
    }
    
    pauseAllVideos() {
      this.modal.querySelectorAll('video').forEach(video => {
        video.pause();
      });
    }
  }
  
  // Initialize modal
  document.addEventListener('DOMContentLoaded', () => {
    const sectionId = document.querySelector('.hero-reference-modal')?.id.replace('modal-', '');
    if (sectionId) {
      new HeroReferenceModal(sectionId);
    }
  });
{% endjavascript %}

