{% liquid
  assign heading_italic = section.settings.heading_italic
  assign heading_main = section.settings.heading_main
  assign description = section.settings.description
  assign button_primary_text = section.settings.button_primary_text
  assign button_primary_link = section.settings.button_primary_link
  assign button_secondary_text = section.settings.button_secondary_text
  assign button_secondary_link = section.settings.button_secondary_link
  assign right_block_badge = section.settings.right_block_badge
  assign right_block_text = section.settings.right_block_text
%}

<section class="hero-reference">
  <div class="hero-reference__container">
    <!-- Left Image Only -->
    <div class="hero-reference__image-wrapper">
      <div class="hero-reference__image">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1200 | image_tag: 
            loading: 'eager',
            fetchpriority: 'high',
            class: 'hero-reference__img',
            alt: section.settings.image.alt }}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-reference__img-placeholder' }}
        {% endif %}
      </div>
    </div>
    
    <!-- Right Content -->
    <div class="hero-reference__content">
      <div class="hero-reference__text">
        {% if heading_italic != blank %}
          <p class="hero-reference__subtitle">{{ heading_italic }}</p>
        {% endif %}
        
        {% if heading_main != blank %}
          <h1 class="hero-reference__title">{{ heading_main }}</h1>
        {% endif %}
        
        {% if description != blank %}
          <div class="hero-reference__description">{{ description }}</div>
        {% endif %}
        
        <div class="hero-reference__buttons">
          {% if button_primary_text != blank %}
            <a href="{{ button_primary_link }}" class="hero-reference__button hero-reference__button--primary">
              {{ button_primary_text }}
            </a>
          {% endif %}
          
          {% if button_secondary_text != blank %}
            <a href="{{ button_secondary_link }}" class="hero-reference__button hero-reference__button--secondary">
              {{ button_secondary_text }}
            </a>
          {% endif %}
        </div>
      </div>
      
      {% if section.settings.show_dna_animation %}
        <div class="hero-reference__dna-animation">
          <svg viewBox="0 0 200 400" class="dna-helix">
            <!-- DNA Helix SVG paths here -->
          </svg>
        </div>
      {% endif %}
      
      <div class="hero-reference__block">
        {% if right_block_badge != blank %}
          <span class="hero-reference__badge">{{ right_block_badge }}</span>
        {% endif %}
        
        {% if right_block_text != blank %}
          <h2 class="hero-reference__block-title">{{ right_block_text }}</h2>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@400;600&display=swap');

  .hero-reference {
    position: relative;
    overflow: hidden;
    min-height: 90vh;
    background: #FAFAF9;
  }

  .hero-reference__container {
    display: grid;
    grid-template-columns: 60% 40%;
    height: 100%;
    min-height: 90vh;
  }

  /* Left Image Only */
  .hero-reference__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .hero-reference__image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .hero-reference__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%;
  }

  /* Right Content */
  .hero-reference__content {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 80px 60px;
    background: linear-gradient(135deg, #000204ff 0%, #0d1b2a 100%);
    overflow: hidden;
  }

  .hero-reference__text {
    position: relative;
    z-index: 2;
    margin-bottom: 60px;
  }

  .hero-reference__subtitle {
    font-family: 'Playfair Display', serif;
    font-style: italic;
    font-size: 1.125rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.75);
    margin: 0 0 16px 0;
    letter-spacing: 0.02em;
  }

  .hero-reference__title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: #FFFFFF;
    margin: 0 0 32px 0;
    letter-spacing: -0.02em;
  }

  .hero-reference__description {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    line-height: 1.75;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 48px 0;
  }

  .hero-reference__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .hero-reference__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 40px;
    border-radius: 50px;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .hero-reference__button--primary {
    background: #d3e0e0;
    color: #FFFFFF;
    box-shadow: 0 8px 24px rgba(199, 149, 109, 0.5);
  }

  .hero-reference__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(199, 149, 109, 0.6);
    background: linear-gradient(135deg, #D4A778 0%, #C7956D 100%);
  }

  .hero-reference__button--secondary {
    background: transparent;
    color: #FFFFFF;
    border: 2px solid rgba(255, 255, 255, 0.4);
  }

  .hero-reference__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
  }

  /* Badge Block */
  .hero-reference__block {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px;
    border-radius: 16px;
    background: rgba(199, 149, 109, 0.15);
    border: 2px solid rgba(199, 149, 109, 0.3);
    backdrop-filter: blur(10px);
    text-align: center;
  }

  .hero-reference__dna-animation {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.05;
    z-index: 1;
  }

  .dna-helix {
    width: 200px;
    height: 400px;
    animation: dnaRotate 20s linear infinite;
  }

  @keyframes dnaRotate {
    0% {
      transform: rotateY(0deg) scale(1);
    }
    50% {
      transform: rotateY(180deg) scale(1.05);
    }
    100% {
      transform: rotateY(360deg) scale(1);
    }
  }

  .hero-reference__badge {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #d3e0e0;
    margin-bottom: 16px;
  }

  .hero-reference__block-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 5rem);
    font-weight: 700;
    line-height: 0.9;
    color: #FFFFFF;
    margin: 0;
    letter-spacing: -0.02em;
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .hero-reference__container {
      grid-template-columns: 55% 45%;
    }

    .hero-reference__content {
      padding: 60px 40px;
    }

    .hero-reference__text {
      margin-bottom: 40px;
    }

    .hero-reference__title {
      font-size: clamp(2rem, 4vw, 3rem);
    }
  }

  @media screen and (max-width: 768px) {
    .hero-reference__container {
      grid-template-columns: 1fr;
      grid-template-rows: 50vh auto;
      min-height: 100vh;
    }

    .hero-reference__content {
      padding: 40px 32px;
    }

    .hero-reference__text {
      margin-bottom: 40px;
    }

    .hero-reference__title {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .hero-reference__description {
      font-size: 1rem;
      margin-bottom: 32px;
    }

    .hero-reference__buttons {
      flex-direction: column;
    }

    .hero-reference__button {
      width: 100%;
      justify-content: center;
    }

    .hero-reference__block {
      padding: 32px;
    }

    .hero-reference__block-title {
      font-size: 3rem;
    }
  }
{% endstylesheet %}

