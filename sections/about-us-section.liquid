{% comment %}
  About Us Section - Two column layout with image and content
{% endcomment %}

<section id="section-{{ section.id }}" class="about-us-section">
  <div class="about-us-section__container">
    {% comment %} Image Column {% endcomment %}
    <div class="about-us-section__image-column">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w,
                  {{ section.settings.image | image_url: width: 900 }} 900w,
                  {{ section.settings.image | image_url: width: 1200 }} 1200w"
          sizes="(max-width: 1030px) 100vw, 50vw"
          alt="{{ section.settings.image.alt | default: section.settings.title }}"
          loading="lazy"
          width="810"
          height="740"
          class="about-us-section__image"
        >
      {% else %}
        <div class="about-us-section__placeholder">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'about-us-section__placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    {% comment %} Content Column {% endcomment %}
    <div 
      class="about-us-section__content-column"
      style="background-color: {{ section.settings.content_background }};"
    >
      <div class="about-us-section__content-wrapper">
        {% if section.settings.title != blank %}
          <h2 
            class="about-us-section__title"
            style="color: {{ section.settings.title_color }};"
          >
            {{ section.settings.title }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div 
            class="about-us-section__description"
            style="color: {{ section.settings.text_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a 
            href="{{ section.settings.button_link }}" 
            class="about-us-section__button"
            style="background-color: {{ section.settings.button_bg }}; 
                   color: {{ section.settings.button_color }};
                   border-color: {{ section.settings.button_border }};"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}

        {% if section.settings.link_text != blank %}
          <a 
            href="{{ section.settings.link_url }}" 
            class="about-us-section__link"
            style="color: {{ section.settings.link_color }};"
          >
            {{ section.settings.link_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .about-us-section {
    width: 100%;
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px 0;
  }

  .about-us-section__container {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: {{ section.settings.gap_desktop }}px;
    padding: 0 {{ section.settings.padding_horizontal }}px;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  .about-us-section__image-column,
  .about-us-section__content-column {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-us-section__image-column {
    overflow: hidden;
  }

  .about-us-section__image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .about-us-section__placeholder {
    width: 100%;
    background: #f3f4f6;
  }

  .about-us-section__placeholder-svg {
    width: 100%;
    height: auto;
  }

  .about-us-section__content-column {
    padding: 60px;
  }

  .about-us-section__content-wrapper {
    max-width: 600px;
    width: 100%;
  }

  .about-us-section__title {
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-size: {{ section.settings.title_size_desktop }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .about-us-section__description {
    font-size: {{ section.settings.text_size_desktop }}px;
    line-height: 1.7;
    margin-top: 24px;
  }

  .about-us-section__description p {
    margin-bottom: 16px;
  }

  .about-us-section__description p:last-child {
    margin-bottom: 0;
  }

  .about-us-section__button {
    display: inline-block;
    padding: 14px 32px;
    margin-top: 24px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border: 2px solid;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .about-us-section__button:hover {
    opacity: 0.85;
    transform: translateY(-2px);
  }

  .about-us-section__link {
    display: inline-block;
    margin-top: 16px;
    font-size: 14px;
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .about-us-section__link:hover {
    opacity: 0.7;
  }

  /* Reverse Layout Option */
  .about-us-section--reverse .about-us-section__container {
    flex-direction: row-reverse;
  }

  /* Responsive Styles */
  @media (max-width: 1030px) {
    .about-us-section {
      margin: {{ section.settings.margin_top_mobile }}px 0 {{ section.settings.margin_bottom_mobile }}px 0;
    }

    .about-us-section__container {
      flex-direction: column;
      gap: {{ section.settings.gap_mobile }}px;
      padding: 0 16px;
    }

    .about-us-section__content-column {
      padding: 40px 24px;
      text-align: center;
    }

    .about-us-section__content-wrapper {
      max-width: 100%;
    }

    .about-us-section__title {
      font-size: {{ section.settings.title_size_mobile }}px;
      margin-bottom: 16px;
    }

    .about-us-section__description {
      font-size: {{ section.settings.text_size_mobile }}px;
      margin-top: 16px;
    }

    .about-us-section__button {
      margin-top: 16px;
      width: 100%;
      text-align: center;
    }

    .about-us-section__link {
      display: block;
    }

    /* Mobile always shows image first */
    .about-us-section--reverse .about-us-section__container {
      flex-direction: column;
    }
  }
</style>

{% if section.settings.reverse_layout %}
  <style>
    #section-{{ section.id }} {
      .about-us-section__container {
        flex-direction: row-reverse;
      }
    }

    @media (max-width: 1030px) {
      #section-{{ section.id }} {
        .about-us-section__container {
          flex-direction: column;
        }
      }
    }
  </style>
{% endif %}

