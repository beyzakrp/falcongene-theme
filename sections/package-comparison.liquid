{% liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
%}

<section class="package-comparison">
  <div class="package-comparison__container">
    {% if title != blank %}
      <h2 class="package-comparison__title">{{ title }}</h2>
    {% endif %}
    
    {% if subtitle != blank %}
      <p class="package-comparison__subtitle">{{ subtitle }}</p>
    {% endif %}

    <!-- Desktop Grid Layout -->
    <div class="package-comparison__grid">
      {% for block in section.blocks %}
        <div class="package-comparison__card {% if block.settings.is_recommended %}package-comparison__card--recommended{% endif %}">
          <!-- Header -->
          <div class="package-comparison__card-header">
            {% if block.settings.is_recommended %}
              <span class="package-comparison__badge">ÖNERİLEN</span>
            {% endif %}
            <h3 class="package-comparison__card-title">{{ block.settings.package_name }}</h3>
            <p class="package-comparison__card-scope">{{ block.settings.scope }}</p>
          </div>

          <!-- Features List -->
          <div class="package-comparison__features">
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">En kapsamlı</span>
              <span class="package-comparison__feature-value">{{ block.settings.gene_count }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">Spor</span>
              <span class="package-comparison__feature-value">{{ block.settings.sport_analysis }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">Beslenme</span>
              <span class="package-comparison__feature-value">{{ block.settings.nutrition }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">Cilt</span>
              <span class="package-comparison__feature-value">{{ block.settings.skin }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">İlaç Metabolizması</span>
              <span class="package-comparison__feature-value">{{ block.settings.drug_metabolism }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">Teknoloji</span>
              <span class="package-comparison__feature-value">{{ block.settings.technology }}</span>
            </div>
            
            <div class="package-comparison__feature">
              <span class="package-comparison__feature-label">Teslim Süresi</span>
              <span class="package-comparison__feature-value">{{ block.settings.delivery_time }}</span>
            </div>
          </div>

          <!-- Price & CTA -->
          <div class="package-comparison__card-footer">
            <div class="package-comparison__price">{{ block.settings.price }}</div>
            {% if block.settings.product_url != blank %}
              <a href="{{ block.settings.product_url }}" class="package-comparison__cta">
                {{ block.settings.cta_text | default: 'Satın Al' }}
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 8H13M13 8L9 4M13 8L9 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  .package-comparison {
    padding: 80px 20px 100px;
    background: #f8f9fa;
  }

  .package-comparison__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .package-comparison__title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    color: #0d1b2a;
    margin: 0 0 12px 0;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .package-comparison__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    text-align: center;
    color: #64748b;
    margin: 0 0 56px 0;
    line-height: 1.5;
  }

  /* Grid Layout */
  .package-comparison__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1140px;
    margin: 0 auto;
  }

  /* Card Styling */
  .package-comparison__card {
    background: white;
    border-radius: 16px;
    border: 2px solid #e2e8f0;
    padding: 32px 28px;
    display: flex;
    flex-direction: column;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .package-comparison__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
  }

  .package-comparison__card--recommended {
    background: linear-gradient(to bottom, #f0fdf4, #ffffff);
    border-color: #10b981;
    border-width: 2px;
    transform: scale(1.05);
    box-shadow: 0 8px 32px rgba(16, 185, 129, 0.15);
    z-index: 2;
  }

  .package-comparison__card--recommended:hover {
    transform: scale(1.05) translateY(-4px);
    box-shadow: 0 16px 40px rgba(16, 185, 129, 0.2);
  }

  /* Card Header */
  .package-comparison__card-header {
    text-align: center;
    margin-bottom: 28px;
    padding-bottom: 24px;
    border-bottom: 1px solid #e2e8f0;
  }

  .package-comparison__card--recommended .package-comparison__card-header {
    border-bottom-color: rgba(16, 185, 129, 0.2);
  }

  .package-comparison__badge {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: #10b981;
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    margin-bottom: 16px;
  }

  .package-comparison__card-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.375rem;
    font-weight: 700;
    color: #0d1b2a;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .package-comparison__card-scope {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #64748b;
    margin: 0;
  }

  /* Features List */
  .package-comparison__features {
    flex: 1;
    margin-bottom: 28px;
  }

  .package-comparison__feature {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14px 0;
    border-bottom: 1px solid #f1f5f9;
  }

  .package-comparison__feature:last-child {
    border-bottom: none;
  }

  .package-comparison__feature-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
  }

  .package-comparison__feature-value {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #0d1b2a;
  }

  /* Card Footer */
  .package-comparison__card-footer {
    padding-top: 24px;
    border-top: 1px solid #e2e8f0;
  }

  .package-comparison__card--recommended .package-comparison__card-footer {
    border-top-color: rgba(16, 185, 129, 0.2);
  }

  .package-comparison__price {
    font-family: 'Inter', sans-serif;
    font-size: 2.25rem;
    font-weight: 800;
    color: #0d1b2a;
    letter-spacing: -0.03em;
    text-align: center;
    display: block;
    margin-bottom: 20px;
  }

  .package-comparison__cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 14px 24px;
    border-radius: 10px;
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: white;
    border: 2px solid #0d1b2a;
    color: #0d1b2a;
  }

  .package-comparison__cta svg {
    transition: transform 0.3s ease;
  }

  .package-comparison__cta:hover {
    background: #0d1b2a;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(13, 27, 42, 0.2);
  }

  .package-comparison__cta:hover svg {
    transform: translateX(4px);
  }

  .package-comparison__card--recommended .package-comparison__cta {
    background: #0d1b2a;
    color: white;
    border-color: #0d1b2a;
    padding: 16px 28px;
    font-size: 1rem;
    box-shadow: 0 4px 16px rgba(13, 27, 42, 0.3);
  }

  .package-comparison__card--recommended .package-comparison__cta:hover {
    background: #1a4d5e;
    border-color: #1a4d5e;
    box-shadow: 0 8px 24px rgba(26, 77, 94, 0.4);
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .package-comparison__grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .package-comparison__card--recommended {
      transform: scale(1);
    }

    .package-comparison__card--recommended:hover {
      transform: translateY(-4px);
    }
  }

  @media screen and (max-width: 768px) {
    .package-comparison {
      padding: 60px 16px 80px;
    }

    .package-comparison__title {
      font-size: 1.5rem;
    }

    .package-comparison__subtitle {
      font-size: 0.9375rem;
      margin-bottom: 40px;
    }

    .package-comparison__card {
      padding: 24px 20px;
    }

    .package-comparison__card-title {
      font-size: 1.25rem;
    }

    .package-comparison__price {
      font-size: 2rem;
    }
  }
{% endstylesheet %}

