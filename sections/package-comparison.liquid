{% liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
%}

<section class="package-comparison">
  <div class="package-comparison__container">
    {% if title != blank %}
      <h2 class="package-comparison__title">{{ title }}</h2>
    {% endif %}
    
    {% if subtitle != blank %}
      <p class="package-comparison__subtitle">{{ subtitle }}</p>
    {% endif %}

    <div class="package-comparison__table-wrapper">
      <table class="package-comparison__table">
        <thead>
          <tr>
            <th class="package-comparison__feature-col">Özellikler</th>
            {% for block in section.blocks %}
              <th class="package-comparison__package-col {% if block.settings.is_recommended %}package-comparison__package-col--recommended{% endif %}">
                <div class="package-comparison__package-header">
                  {% if block.settings.is_recommended %}
                    <span class="package-comparison__badge">⭐ Önerilen</span>
                  {% endif %}
                  <h3 class="package-comparison__package-name">{{ block.settings.package_name }}</h3>
                  {% if block.settings.package_subtitle != blank %}
                    <p class="package-comparison__package-subtitle">{{ block.settings.package_subtitle }}</p>
                  {% endif %}
                </div>
              </th>
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          <!-- Kapsam -->
          <tr>
            <td class="package-comparison__feature-name">Kapsam</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.scope }}</td>
            {% endfor %}
          </tr>

          <!-- Gen Sayısı -->
          <tr>
            <td class="package-comparison__feature-name">Gen Sayısı</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.gene_count }}</td>
            {% endfor %}
          </tr>

          <!-- Spor Analizi -->
          <tr>
            <td class="package-comparison__feature-name">Spor Analizi</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.sport_analysis }}</td>
            {% endfor %}
          </tr>

          <!-- Beslenme -->
          <tr>
            <td class="package-comparison__feature-name">Beslenme</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.nutrition }}</td>
            {% endfor %}
          </tr>

          <!-- Cilt -->
          <tr>
            <td class="package-comparison__feature-name">Cilt</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.skin }}</td>
            {% endfor %}
          </tr>

          <!-- İlaç Metabolizması -->
          <tr>
            <td class="package-comparison__feature-name">İlaç Metabolizması</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.drug_metabolism }}</td>
            {% endfor %}
          </tr>

          <!-- Teknoloji -->
          <tr>
            <td class="package-comparison__feature-name">Teknoloji</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.technology }}</td>
            {% endfor %}
          </tr>

          <!-- Teslim Süresi -->
          <tr>
            <td class="package-comparison__feature-name">Teslim Süresi</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">{{ block.settings.delivery_time }}</td>
            {% endfor %}
          </tr>

          <!-- Fiyat -->
          <tr class="package-comparison__price-row">
            <td class="package-comparison__feature-name">Fiyat</td>
            {% for block in section.blocks %}
              <td class="package-comparison__feature-value">
                <strong class="package-comparison__price">{{ block.settings.price }}</strong>
              </td>
            {% endfor %}
          </tr>

          <!-- CTA Buttons -->
          <tr class="package-comparison__cta-row">
            <td></td>
            {% for block in section.blocks %}
              <td class="package-comparison__cta-cell">
                {% if block.settings.product_url != blank %}
                  <a href="{{ block.settings.product_url }}" class="package-comparison__cta-btn {% if block.settings.is_recommended %}package-comparison__cta-btn--recommended{% endif %}">
                    {{ block.settings.cta_text | default: 'Satın Al' }}
                  </a>
                {% endif %}
              </td>
            {% endfor %}
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="package-comparison__mobile-cards">
      {% for block in section.blocks %}
        <div class="package-comparison__mobile-card {% if block.settings.is_recommended %}package-comparison__mobile-card--recommended{% endif %}">
          <div class="package-comparison__mobile-header">
            {% if block.settings.is_recommended %}
              <span class="package-comparison__badge">⭐ Önerilen</span>
            {% endif %}
            <h3 class="package-comparison__package-name">{{ block.settings.package_name }}</h3>
            {% if block.settings.package_subtitle != blank %}
              <p class="package-comparison__package-subtitle">{{ block.settings.package_subtitle }}</p>
            {% endif %}
          </div>

          <div class="package-comparison__mobile-features">
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Kapsam:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.scope }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Gen Sayısı:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.gene_count }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Spor Analizi:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.sport_analysis }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Beslenme:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.nutrition }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Cilt:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.skin }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">İlaç Metabolizması:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.drug_metabolism }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Teknoloji:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.technology }}</span>
            </div>
            <div class="package-comparison__mobile-feature">
              <span class="package-comparison__mobile-feature-label">Teslim Süresi:</span>
              <span class="package-comparison__mobile-feature-value">{{ block.settings.delivery_time }}</span>
            </div>
          </div>

          <div class="package-comparison__mobile-footer">
            <strong class="package-comparison__price">{{ block.settings.price }}</strong>
            {% if block.settings.product_url != blank %}
              <a href="{{ block.settings.product_url }}" class="package-comparison__cta-btn {% if block.settings.is_recommended %}package-comparison__cta-btn--recommended{% endif %}">
                {{ block.settings.cta_text | default: 'Satın Al' }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .package-comparison {
    padding: 80px 20px;
    background: #FAFAF9;
  }

  .package-comparison__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .package-comparison__title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    color: #0d1b2a;
    margin-bottom: 12px;
    letter-spacing: -0.02em;
  }

  .package-comparison__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    text-align: center;
    color: #5a6c7d;
    margin-bottom: 48px;
  }

  /* Desktop Table */
  .package-comparison__table-wrapper {
    display: none;
    overflow-x: auto;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .package-comparison__table {
    width: 100%;
    border-collapse: collapse;
    background: white;
  }

  .package-comparison__table thead {
    background: #0d1b2a;
    color: white;
  }

  .package-comparison__table th {
    padding: 24px 16px;
    text-align: center;
    font-weight: 600;
    border-right: 1px solid rgba(255, 255, 255, 0.1);
  }

  .package-comparison__table th:last-child {
    border-right: none;
  }

  .package-comparison__feature-col {
    text-align: left !important;
    width: 200px;
    background: #0d1b2a;
  }

  .package-comparison__package-col {
    position: relative;
    width: 33.33%;
  }

  .package-comparison__package-col--recommended {
    background: linear-gradient(180deg, #1a4d5e 0%, #0d1b2a 100%);
  }

  .package-comparison__badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background: rgba(255, 215, 0, 0.2);
    color: #ffd700;
    padding: 4px 12px;
    border-radius: 20px;
    margin-bottom: 8px;
  }

  .package-comparison__package-header {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .package-comparison__package-name {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    color: white;
  }

  .package-comparison__package-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 4px 0 0 0;
  }

  .package-comparison__table tbody tr {
    border-bottom: 1px solid #e5e7eb;
  }

  .package-comparison__table tbody tr:last-child {
    border-bottom: none;
  }

  .package-comparison__table td {
    padding: 16px;
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
  }

  .package-comparison__feature-name {
    text-align: left !important;
    font-weight: 600;
    color: #0d1b2a;
    background: #f9fafb;
  }

  .package-comparison__feature-value {
    color: #374151;
  }

  .package-comparison__package-col--recommended + td {
    background: rgba(26, 77, 94, 0.02);
  }

  .package-comparison__price-row {
    background: #f9fafb;
  }

  .package-comparison__price {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #0d1b2a;
  }

  .package-comparison__cta-row td {
    padding: 24px 16px;
  }

  .package-comparison__cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 32px;
    border-radius: 6px;
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid #0d1b2a;
    background: white;
    color: #0d1b2a;
  }

  .package-comparison__cta-btn:hover {
    background: #0d1b2a;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 27, 42, 0.2);
  }

  .package-comparison__cta-btn--recommended {
    background: #0d1b2a;
    color: white;
    border-color: #0d1b2a;
    box-shadow: 0 4px 16px rgba(13, 27, 42, 0.3);
  }

  .package-comparison__cta-btn--recommended:hover {
    background: #1a4d5e;
    border-color: #1a4d5e;
    box-shadow: 0 6px 20px rgba(26, 77, 94, 0.4);
  }

  /* Mobile Cards */
  .package-comparison__mobile-cards {
    display: grid;
    gap: 24px;
  }

  .package-comparison__mobile-card {
    background: white;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .package-comparison__mobile-card--recommended {
    border-color: #1a4d5e;
    box-shadow: 0 4px 20px rgba(26, 77, 94, 0.15);
  }

  .package-comparison__mobile-header {
    text-align: center;
    padding-bottom: 20px;
    border-bottom: 2px solid #e5e7eb;
    margin-bottom: 20px;
  }

  .package-comparison__mobile-features {
    margin-bottom: 24px;
  }

  .package-comparison__mobile-feature {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid #f3f4f6;
  }

  .package-comparison__mobile-feature:last-child {
    border-bottom: none;
  }

  .package-comparison__mobile-feature-label {
    font-weight: 600;
    color: #0d1b2a;
    font-size: 0.875rem;
  }

  .package-comparison__mobile-feature-value {
    color: #374151;
    font-size: 0.875rem;
  }

  .package-comparison__mobile-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    padding-top: 20px;
    border-top: 2px solid #e5e7eb;
  }

  .package-comparison__mobile-footer .package-comparison__price {
    font-size: 1.75rem;
  }

  .package-comparison__mobile-footer .package-comparison__cta-btn {
    width: 100%;
  }

  /* Responsive */
  @media screen and (min-width: 1024px) {
    .package-comparison__table-wrapper {
      display: block;
    }

    .package-comparison__mobile-cards {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    .package-comparison {
      padding: 60px 16px;
    }

    .package-comparison__title {
      font-size: 1.75rem;
      margin-bottom: 8px;
    }

    .package-comparison__subtitle {
      font-size: 1rem;
      margin-bottom: 32px;
    }
  }
{% endstylesheet %}

