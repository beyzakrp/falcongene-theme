{% liquid
  assign badge_text = section.settings.badge_text
  assign heading = section.settings.heading
  assign description = section.settings.description
  assign primary_button_text = section.settings.primary_button_text
  assign primary_button_link = section.settings.primary_button_link
  assign secondary_button_text = section.settings.secondary_button_text
  assign secondary_button_link = section.settings.secondary_button_link
  assign text_color = section.settings.text_color
  assign heading_color = section.settings.heading_color
  assign bg_type = section.settings.background_type
  assign bg_color = section.settings.background_color
  assign gradient_start = section.settings.gradient_start_color
  assign gradient_end = section.settings.gradient_end_color
  assign gradient_angle = section.settings.gradient_angle

  if bg_type == 'solid'
    assign background_style = 'background: ' | append: bg_color | append: ';'
  else
    assign background_style = 'background: linear-gradient(' | append: gradient_angle | append: 'deg, ' | append: gradient_start | append: ' 0%, ' | append: gradient_end | append: ' 100%);'
  endif
%}

<div class="stats-cards section section--full-width spacing-style color-{{ section.settings.color_scheme }}" 
  data-text-color="{{ text_color }}" 
  data-heading-color="{{ heading_color }}"
  style="--custom-text-color: {{ text_color }}; --custom-heading-color: {{ heading_color }}; {{ background_style }}">
  <div class="stats-cards__container">
    <div class="stats-cards__content">
      <!-- Badge -->
      {% if badge_text != blank %}
        <div class="stats-cards__badge">
          <span class="stats-cards__badge-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
          </span>
          {{ badge_text }}
        </div>
      {% endif %}

      <!-- Heading -->
      {% if heading != blank %}
        <h2 class="stats-cards__heading h1">
          {{ heading }}
        </h2>
      {% endif %}

      <!-- Description -->
      {% if description != blank %}
        <div class="stats-cards__description">
          {{ description }}
        </div>
      {% endif %}

      <!-- Buttons -->
      {% if primary_button_text != blank or secondary_button_text != blank %}
        <div class="stats-cards__buttons">
          {% if primary_button_text != blank and primary_button_link != blank %}
            <a href="{{ primary_button_link }}" class="stats-cards__button stats-cards__button--primary">
              {{ primary_button_text }}
            </a>
          {% endif %}
          {% if secondary_button_text != blank and secondary_button_link != blank %}
            <a href="{{ secondary_button_link }}" class="stats-cards__button stats-cards__button--secondary">
              {{ secondary_button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <!-- Stats Cards Grid -->
    <div class="stats-cards__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'stat_card' %}
            <div class="stats-card" {{ block.shopify_attributes }}>
              <div class="stats-card__inner">
                <!-- Background Image -->
                {% if block.settings.image != blank %}
                  <div class="stats-card__image">
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag: loading: 'lazy', class: 'stats-card__img'
                    }}
                  </div>
                {% else %}
                  <div class="stats-card__image stats-card__image--placeholder">
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'stats-card__img' }}
                  </div>
                {% endif %}

                <!-- Icon -->
                {% if block.settings.icon != blank %}
                  <div class="stats-card__icon-wrapper">
                    <div class="stats-card__icon">
                      {% case block.settings.icon %}
                        {% when 'chart' %}
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="20" x2="12" y2="10"></line>
                            <line x1="18" y1="20" x2="18" y2="4"></line>
                            <line x1="6" y1="20" x2="6" y2="16"></line>
                          </svg>
                        {% when 'dna' %}
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2v20M2 12h20"></path>
                            <circle cx="12" cy="12" r="10"></circle>
                          </svg>
                        {% when 'flask' %}
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 2v7.5l-5 5V21a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-6.5l-5-5V2"></path>
                          </svg>
                        {% when 'microscope' %}
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M6 18h8M3 22h18M14 22a7 7 0 1 0 0-14h-1M9 14h2M9 12a2 2 0 0 1-2-2V6h6v4a2 2 0 0 1-2 2Z"></path>
                          </svg>
                        {% else %}
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                          </svg>
                      {% endcase %}
                    </div>
                  </div>
                {% endif %}

                <!-- Content -->
                <div class="stats-card__content">
                  {% if block.settings.number != blank %}
                    <div class="stats-card__number">{{ block.settings.number }}</div>
                  {% endif %}
                  {% if block.settings.label != blank %}
                    <div class="stats-card__label">{{ block.settings.label }}</div>
                  {% endif %}
                </div>

                <!-- Badges (for certifications) -->
                {% if block.settings.show_badges %}
                  <div class="stats-card__badges">
                    <span class="stats-card__badge-item">ISO</span>
                    <span class="stats-card__badge-item">FDA</span>
                    <span class="stats-card__badge-item">CE</span>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Certified Lab Badge -->
    {% if section.settings.show_certification %}
      <div class="stats-cards__certification">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span>{{ section.settings.certification_text | default: 'Sertifikalı Lab' }}</span>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .stats-cards {
    background: linear-gradient(135deg, #1a3a52 0%, #0d1b2a 100%);
    position: relative;
    overflow: hidden;
    padding: var(--padding-3xl) 0;

    @media screen and (min-width: 750px) {
      padding: var(--padding-4xl) 0;
    }
  }

  .stats-cards[data-heading-color] .stats-cards__heading {
    color: var(--custom-heading-color);
  }

  .stats-cards[data-text-color] .stats-cards__description,
  .stats-cards[data-text-color] .stats-cards__badge {
    color: var(--custom-text-color);
  }

  /* Decorative background elements */
  .stats-cards::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(74, 144, 226, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  .stats-cards::after {
    content: '';
    position: absolute;
    bottom: -30%;
    right: -5%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(93, 173, 226, 0.08) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  .stats-cards__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--padding-xl);
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap-3xl);
    position: relative;
    z-index: 1;

    @media screen and (min-width: 990px) {
      grid-template-columns: 400px 1fr;
      gap: var(--gap-4xl);
      align-items: center;
    }
  }

  /* Left Content */
  .stats-cards__content {
    color: white;
  }

  .stats-cards__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--margin-lg);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .stats-cards__badge-icon {
    display: flex;
    align-items: center;
    color: #4A90E2;
  }

  .stats-cards__heading {
    margin: 0 0 var(--margin-lg);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: white;
  }

  .stats-cards__heading em,
  .stats-cards__heading i {
    color: #4A90E2;
    font-style: normal;
  }

  .stats-cards__description {
    margin-bottom: var(--margin-xl);
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
  }

  .stats-cards__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap-md);
  }

  .stats-cards__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.75rem;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .stats-cards__button--primary {
    background: #4A90E2;
    color: white;
    box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);

    &:hover {
      background: #357ABD;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(74, 144, 226, 0.4);
    }
  }

  .stats-cards__button--secondary {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);

    &:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.5);
    }
  }

  /* Stats Grid */
  .stats-cards__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap-lg);
    position: relative;

    @media screen and (min-width: 750px) {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Individual Stat Card */
  .stats-card {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.4s ease;

    &:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      border-color: rgba(74, 144, 226, 0.3);
    }
  }

  .stats-card__inner {
    position: relative;
    padding: 2rem;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .stats-card__image {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .stats-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .stats-card__image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(13, 27, 42, 0.7) 0%, rgba(26, 58, 82, 0.8) 100%);
  }

  .stats-card__icon-wrapper {
    position: relative;
    z-index: 2;
    margin-bottom: 1rem;
  }

  .stats-card__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(74, 144, 226, 0.2);
    border: 1px solid rgba(74, 144, 226, 0.3);
    border-radius: 1rem;
    color: #4A90E2;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .stats-card__content {
    position: relative;
    z-index: 2;
  }

  .stats-card__number {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stats-card__label {
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stats-card__badges {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
    z-index: 10;
  }

  .stats-card__badge-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
    font-size: 0.625rem;
    font-weight: 700;
    color: white;
  }

  /* Certification Badge */
  .stats-cards__certification {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    margin-top: var(--margin-xl);
    width: fit-content;

    svg {
      color: #4A90E2;
      flex-shrink: 0;
    }

    @media screen and (min-width: 990px) {
      margin-left: auto;
      margin-right: 2rem;
    }
  }

  /* Responsive */
  @media screen and (max-width: 989px) {
    .stats-cards__container {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (max-width: 749px) {
    .stats-card__inner {
      padding: 1.5rem;
      min-height: 180px;
    }

    .stats-card__icon {
      width: 48px;
      height: 48px;
    }

    .stats-card__badges {
      bottom: 1rem;
      right: 1rem;
      gap: 0.375rem;
    }

    .stats-card__badge-item {
      width: 36px;
      height: 36px;
      font-size: 0.563rem;
    }
  }
{% endstylesheet %}

