{% liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
%}

<section class="pricing-cards-modern">
  <div class="pricing-cards-modern__container">
    {% if title != blank %}
      <h2 class="pricing-cards-modern__title">{{ title }}</h2>
    {% endif %}
    
    {% if subtitle != blank %}
      <p class="pricing-cards-modern__subtitle">{{ subtitle }}</p>
    {% endif %}

    <div class="pricing-cards-modern__grid">
      {% for block in section.blocks %}
        <div class="pricing-cards-modern__card {% if block.settings.is_featured %}pricing-cards-modern__card--featured{% endif %}" {{ block.shopify_attributes }}>
          {% if block.settings.is_featured %}
            <div class="pricing-cards-modern__featured-badge">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8 1L10.163 5.38197L15 6.12121L11.5 9.52786L12.326 14.3L8 12.082L3.674 14.3L4.5 9.52786L1 6.12121L5.837 5.38197L8 1Z" fill="currentColor"/>
              </svg>
              Önerilen
            </div>
          {% endif %}

          <div class="pricing-cards-modern__card-header">
            <h3 class="pricing-cards-modern__card-title">{{ block.settings.package_name }}</h3>
            <p class="pricing-cards-modern__card-description">{{ block.settings.description }}</p>
          </div>

          <div class="pricing-cards-modern__price-section">
            <div class="pricing-cards-modern__price">{{ block.settings.price }}</div>
            {% if block.settings.price_note != blank %}
              <p class="pricing-cards-modern__price-note">{{ block.settings.price_note }}</p>
            {% endif %}
          </div>

          <ul class="pricing-cards-modern__features">
            {% if block.settings.feature_1 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="10" cy="10" r="10" fill="#10b981" fill-opacity="0.1"/>
                  <path d="M14 7L8.5 12.5L6 10" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.feature_1 }}</span>
              </li>
            {% endif %}
            
            {% if block.settings.feature_2 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="10" cy="10" r="10" fill="#10b981" fill-opacity="0.1"/>
                  <path d="M14 7L8.5 12.5L6 10" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.feature_2 }}</span>
              </li>
            {% endif %}
            
            {% if block.settings.feature_3 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="10" cy="10" r="10" fill="#10b981" fill-opacity="0.1"/>
                  <path d="M14 7L8.5 12.5L6 10" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.feature_3 }}</span>
              </li>
            {% endif %}
            
            {% if block.settings.feature_4 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="10" cy="10" r="10" fill="#10b981" fill-opacity="0.1"/>
                  <path d="M14 7L8.5 12.5L6 10" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.feature_4 }}</span>
              </li>
            {% endif %}
            
            {% if block.settings.feature_5 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="10" cy="10" r="10" fill="#10b981" fill-opacity="0.1"/>
                  <path d="M14 7L8.5 12.5L6 10" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.feature_5 }}</span>
              </li>
            {% endif %}
            
            {% if block.settings.feature_6 != blank %}
              <li class="pricing-cards-modern__feature">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
