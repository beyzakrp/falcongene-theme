            {% endif %}
          </ul>

          {% if block.settings.product_url != blank %}
            <a href="{{ block.settings.product_url }}" class="pricing-cards-modern__cta">
              {{ block.settings.cta_text | default: 'Satın Al' }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

  .pricing-cards-modern {
    padding: 100px 20px 120px;
    background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
    position: relative;
    overflow: hidden;
  }

  .pricing-cards-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 1400px;
    height: 600px;
    background: radial-gradient(circle at center, rgba(16, 185, 129, 0.03) 0%, transparent 70%);
    pointer-events: none;
  }

  .pricing-cards-modern__container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .pricing-cards-modern__title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    text-align: center;
    color: #0a0a0a;
    margin: 0 0 16px 0;
    letter-spacing: -0.04em;
    line-height: 1.1;
  }

  .pricing-cards-modern__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    text-align: center;
    color: #64748b;
    margin: 0 0 64px 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Grid Layout */
  .pricing-cards-modern__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    align-items: start;
    max-width: 1140px;
    margin: 0 auto;
  }

  /* Card Styling */
  .pricing-cards-modern__card {
    background: white;
    border-radius: 20px;
    padding: 36px 32px;
    display: flex;
    flex-direction: column;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
    position: relative;
  }

  .pricing-cards-modern__card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    border-color: #d1d5db;
  }

  /* Featured Card - Elevated */
  .pricing-cards-modern__card--featured {
    background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
    border: 2px solid #10b981;
    box-shadow: 0 12px 32px rgba(16, 185, 129, 0.15);
    transform: translateY(-10px) scale(1.02);
    z-index: 2;
  }

  .pricing-cards-modern__card--featured:hover {
    transform: translateY(-18px) scale(1.02);
    box-shadow: 0 24px 48px rgba(16, 185, 129, 0.25);
  }

  /* Featured Badge */
  .pricing-cards-modern__featured-badge {
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 8px 20px;
    border-radius: 24px;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
  }

  .pricing-cards-modern__featured-badge svg {
    width: 14px;
    height: 14px;
  }

  /* Card Header */
  .pricing-cards-modern__card-header {
    margin-bottom: 24px;
    text-align: center;
  }

  .pricing-cards-modern__card-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #0a0a0a;
    margin: 0 0 8px 0;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .pricing-cards-modern__card-description {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #64748b;
    margin: 0;
    line-height: 1.5;
  }

  /* Price Section */
  .pricing-cards-modern__price-section {
    margin-bottom: 32px;
    text-align: center;
    padding-bottom: 28px;
    border-bottom: 2px solid #f1f5f9;
  }

  .pricing-cards-modern__card--featured .pricing-cards-modern__price-section {
    border-bottom-color: rgba(16, 185, 129, 0.15);
  }

  .pricing-cards-modern__price {
    font-family: 'Inter', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    color: #0a0a0a;
    letter-spacing: -0.04em;
    line-height: 1;
    margin-bottom: 8px;
  }

  .pricing-cards-modern__price-note {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #94a3b8;
    margin: 0;
  }

  /* Features List */
  .pricing-cards-modern__features {
    list-style: none;
    padding: 0;
    margin: 0 0 32px 0;
    flex: 1;
  }

  .pricing-cards-modern__feature {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: #334155;
    line-height: 1.6;
  }

  .pricing-cards-modern__feature:last-child {
    margin-bottom: 0;
  }

  .pricing-cards-modern__feature svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* CTA Button */
  .pricing-cards-modern__cta {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 16px 28px;
    border-radius: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: #0a0a0a;
    color: white;
    border: 2px solid #0a0a0a;
    cursor: pointer;
  }

  .pricing-cards-modern__cta:hover {
    background: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(10, 10, 10, 0.3);
  }

  .pricing-cards-modern__cta:active {
    transform: translateY(0);
  }

  .pricing-cards-modern__card--featured .pricing-cards-modern__cta {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-color: #10b981;
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
  }

  .pricing-cards-modern__card--featured .pricing-cards-modern__cta:hover {
    background: linear-gradient(135deg, #059669 0%, #047857 100%);
    box-shadow: 0 8px 24px rgba(16, 185, 129, 0.5);
  }

  /* Responsive Design */
  @media screen and (max-width: 1024px) {
    .pricing-cards-modern__grid {
      grid-template-columns: 1fr;
      gap: 40px;
      max-width: 420px;
    }

    .pricing-cards-modern__card--featured {
      transform: translateY(0) scale(1);
    }

    .pricing-cards-modern__card--featured:hover {
      transform: translateY(-8px) scale(1);
    }
  }

  @media screen and (max-width: 768px) {
    .pricing-cards-modern {
      padding: 80px 16px 100px;
    }

    .pricing-cards-modern__title {
      font-size: 2rem;
      margin-bottom: 12px;
    }

    .pricing-cards-modern__subtitle {
      font-size: 1rem;
      margin-bottom: 48px;
    }

    .pricing-cards-modern__card {
      padding: 32px 24px;
    }

    .pricing-cards-modern__price {
      font-size: 2.5rem;
    }

    .pricing-cards-modern__card-title {
      font-size: 1.375rem;
    }
  }
{% endstylesheet %}

