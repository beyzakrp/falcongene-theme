{% liquid
  assign logo_text = section.settings.logo_text
  assign contact_text = section.settings.contact_text
  assign contact_link = section.settings.contact_link
%}

<header class="header-minimal-luxury" data-section-id="{{ section.id }}">
  <!-- Top Bar -->
  <div class="header-minimal__top-bar">
    <div class="header-minimal__container">
      <!-- Left: Contact -->
      <div class="header-minimal__contact">
        <a href="{{ contact_link }}" class="header-minimal__contact-link">
          <svg class="header-minimal__contact-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <span class="header-minimal__contact-text">{{ contact_text }}</span>
        </a>
      </div>

      <!-- Center: Logo -->
      <div class="header-minimal__logo">
        {% if section.settings.logo != blank %}
          <a href="/" class="header-minimal__logo-link">
            {{ section.settings.logo | image_url: width: 200 | image_tag: 
              loading: 'eager',
              class: 'header-minimal__logo-img',
              alt: shop.name }}
          </a>
        {% else %}
          <a href="/" class="header-minimal__logo-link">
            <h1 class="header-minimal__logo-text">{{ logo_text }}</h1>
          </a>
        {% endif %}
      </div>

      <!-- Right: Icons -->
      <div class="header-minimal__icons">
        <a href="/account" class="header-minimal__icon" aria-label="Account">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </a>

        <button type="button" class="header-minimal__icon" aria-label="Search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </button>

        <a href="/pages/wishlist" class="header-minimal__icon" aria-label="Wishlist">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
          </svg>
        </a>

        <a href="/cart" class="header-minimal__icon header-minimal__cart" aria-label="Cart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <path d="M16 10a4 4 0 0 1-8 0"/>
          </svg>
          <span class="header-minimal__cart-count" data-cart-count>0</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="header-minimal__nav">
    <div class="header-minimal__container">
      <ul class="header-minimal__menu">
        {% for link in section.settings.menu.links %}
          <li class="header-minimal__menu-item">
            <a href="{{ link.url }}" class="header-minimal__menu-link{% if link.active %} is-active{% endif %}">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </nav>

  <!-- Mobile Menu Toggle -->
  <button type="button" class="header-minimal__mobile-toggle" aria-label="Menu">
    <span class="header-minimal__mobile-line"></span>
    <span class="header-minimal__mobile-line"></span>
    <span class="header-minimal__mobile-line"></span>
  </button>

  <!-- Mobile Menu Overlay -->
  <div class="header-minimal__mobile-menu">
    <div class="header-minimal__mobile-header">
      <h2 class="header-minimal__mobile-title">{{ logo_text }}</h2>
      <button type="button" class="header-minimal__mobile-close" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
    
    <ul class="header-minimal__mobile-list">
      {% for link in section.settings.menu.links %}
        <li class="header-minimal__mobile-item">
          <a href="{{ link.url }}" class="header-minimal__mobile-link">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</header>

{% stylesheet %}
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Inter:wght@300;400;500;600&display=swap');

  .header-minimal-luxury {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: #FFFFFF;
    border-bottom: 1px solid #E5E5E5;
  }

  /* Top Bar */
  .header-minimal__top-bar {
    padding: 24px 0;
    border-bottom: 1px solid #F5F5F5;
  }

  .header-minimal__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 40px;
  }

  /* Contact */
  .header-minimal__contact {
    display: flex;
    justify-content: flex-start;
  }

  .header-minimal__contact-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: #1A1A1A;
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    font-weight: 400;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .header-minimal__contact-link:hover {
    color: #666666;
  }

  .header-minimal__contact-icon {
    width: 16px;
    height: 16px;
  }

  .header-minimal__contact-text {
    display: inline-block;
  }

  /* Logo */
  .header-minimal__logo {
    display: flex;
    justify-content: center;
  }

  .header-minimal__logo-link {
    text-decoration: none;
  }

  .header-minimal__logo-text {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #1A1A1A;
    margin: 0;
    transition: opacity 0.3s ease;
  }

  .header-minimal__logo-link:hover .header-minimal__logo-text {
    opacity: 0.7;
  }

  .header-minimal__logo-img {
    max-height: 40px;
    width: auto;
  }

  /* Icons */
  .header-minimal__icons {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 24px;
  }

  .header-minimal__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    color: #1A1A1A;
    transition: color 0.3s ease;
    text-decoration: none;
    position: relative;
  }

  .header-minimal__icon:hover {
    color: #666666;
  }

  .header-minimal__icon svg {
    width: 20px;
    height: 20px;
  }

  .header-minimal__cart {
    position: relative;
  }

  .header-minimal__cart-count {
    position: absolute;
    top: -6px;
    right: -8px;
    background: #1A1A1A;
    color: #FFFFFF;
    font-size: 0.625rem;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
    padding: 2px 5px;
    border-radius: 10px;
    min-width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-minimal__cart-count:empty {
    display: none;
  }

  /* Navigation */
  .header-minimal__nav {
    padding: 20px 0;
  }

  .header-minimal__menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 48px;
  }

  .header-minimal__menu-item {
    margin: 0;
  }

  .header-minimal__menu-link {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #1A1A1A;
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
    padding-bottom: 4px;
  }

  .header-minimal__menu-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: #1A1A1A;
    transition: width 0.3s ease;
  }

  .header-minimal__menu-link:hover::after,
  .header-minimal__menu-link.is-active::after {
    width: 100%;
  }

  .header-minimal__menu-link:hover {
    color: #666666;
  }

  /* Mobile Toggle */
  .header-minimal__mobile-toggle {
    display: none;
    position: fixed;
    top: 28px;
    right: 20px;
    z-index: 1001;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
  }

  .header-minimal__mobile-line {
    width: 24px;
    height: 2px;
    background: #1A1A1A;
    transition: all 0.3s ease;
  }

  /* Mobile Menu */
  .header-minimal__mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: #FFFFFF;
    z-index: 1002;
    transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
  }

  .header-minimal__mobile-menu.is-open {
    right: 0;
  }

  .header-minimal__mobile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px;
    border-bottom: 1px solid #F5F5F5;
  }

  .header-minimal__mobile-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #1A1A1A;
    margin: 0;
  }

  .header-minimal__mobile-close {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: #1A1A1A;
  }

  .header-minimal__mobile-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header-minimal__mobile-item {
    border-bottom: 1px solid #F5F5F5;
  }

  .header-minimal__mobile-link {
    display: block;
    padding: 20px 24px;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #1A1A1A;
    text-decoration: none;
    transition: background 0.3s ease;
  }

  .header-minimal__mobile-link:hover {
    background: #FAFAFA;
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .header-minimal__container {
      padding: 0 24px;
      gap: 24px;
    }

    .header-minimal__menu {
      gap: 32px;
    }

    .header-minimal__menu-link {
      font-size: 0.75rem;
    }
  }

  @media screen and (max-width: 768px) {
    .header-minimal__top-bar {
      padding: 20px 0;
    }

    .header-minimal__container {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .header-minimal__contact {
      position: absolute;
      top: 24px;
      left: 20px;
    }

    .header-minimal__contact-text {
      display: none;
    }

    .header-minimal__logo {
      justify-content: center;
    }

    .header-minimal__logo-text {
      font-size: 1.5rem;
    }

    .header-minimal__icons {
      position: absolute;
      top: 24px;
      right: 60px;
      gap: 16px;
    }

    .header-minimal__nav {
      display: none;
    }

    .header-minimal__mobile-toggle {
      display: flex;
    }
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
{% endstylesheet %}

<script>
  class MinimalLuxuryHeader extends HTMLElement {
    constructor() {
      super();
      this.mobileToggle = this.querySelector('.header-minimal__mobile-toggle');
      this.mobileMenu = this.querySelector('.header-minimal__mobile-menu');
      this.mobileClose = this.querySelector('.header-minimal__mobile-close');
      
      this.init();
    }

    init() {
      if (this.mobileToggle) {
        this.mobileToggle.addEventListener('click', () => this.toggleMobileMenu());
      }

      if (this.mobileClose) {
        this.mobileClose.addEventListener('click', () => this.closeMobileMenu());
      }

      // Close on backdrop click
      this.mobileMenu?.addEventListener('click', (e) => {
        if (e.target === this.mobileMenu) {
          this.closeMobileMenu();
        }
      });

      // Update cart count
      this.updateCartCount();
      document.addEventListener('cart:updated', () => this.updateCartCount());
    }

    toggleMobileMenu() {
      this.mobileMenu?.classList.toggle('is-open');
      document.body.style.overflow = this.mobileMenu?.classList.contains('is-open') ? 'hidden' : '';
    }

    closeMobileMenu() {
      this.mobileMenu?.classList.remove('is-open');
      document.body.style.overflow = '';
    }

    async updateCartCount() {
      try {
        const response = await fetch('/cart.js');
        const cart = await response.json();
        const countElement = this.querySelector('[data-cart-count]');
        if (countElement) {
          countElement.textContent = cart.item_count;
        }
      } catch (error) {
        console.error('Error updating cart count:', error);
      }
    }
  }

  customElements.define('minimal-luxury-header', MinimalLuxuryHeader);
</script>

