{% comment %}
  Info Banner - Promotional banner with image, text and optional link
{% endcomment %}

<section 
  id="section-{{ section.id }}" 
  class="info-banner"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="info-banner__container">
    {% if section.settings.image != blank %}
      <span class="info-banner__image-wrapper">
        <img
          width="200"
          height="150"
          src="{{ section.settings.image | image_url: width: 400 }}"
          srcset="{{ section.settings.image | image_url: width: 200 }} 200w,
                  {{ section.settings.image | image_url: width: 400 }} 400w"
          sizes="(max-width: 768px) 120px, 200px"
          loading="lazy"
          alt="{{ section.settings.image.alt | default: section.settings.title }}"
          class="info-banner__image"
        >
      </span>
    {% endif %}

    <div class="info-banner__content">
      {% if section.settings.title != blank %}
        <h2 class="info-banner__title" style="color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="info-banner__description" style="color: {{ section.settings.text_color }};">
          {{ section.settings.description }}
        </p>
      {% endif %}

      {% if section.settings.link_text != blank and section.settings.link_url != blank %}
        <a 
          href="{{ section.settings.link_url }}" 
          class="info-banner__link"
          style="color: {{ section.settings.link_color }};"
        >
          {{ section.settings.link_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .info-banner {
    position: relative;
    width: 100%;
    padding: 0 20px;
  }

  .info-banner__container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    height: {{ section.settings.height_desktop }}px;
    gap: 24px;
  }

  .info-banner__image-wrapper {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-banner__image {
    width: {{ section.settings.image_width_desktop }}px;
    height: auto;
    object-fit: contain;
  }

  .info-banner__content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex: 1;
    position: relative;
  }

  .info-banner__title {
    font-family: {{ section.settings.title_font }}, sans-serif;
    font-size: {{ section.settings.title_size_desktop }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
    margin-bottom: 12px;
    letter-spacing: 0.02em;
  }

  .info-banner__description {
    font-family: {{ section.settings.text_font }}, sans-serif;
    font-size: {{ section.settings.text_size_desktop }}px;
    font-weight: 400;
    line-height: 1.5;
    margin-bottom: 0;
  }

  .info-banner__link {
    position: absolute;
    right: 5px;
    bottom: 5px;
    font-size: 12px;
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .info-banner__link:hover {
    opacity: 0.7;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .info-banner {
      padding: 0 15px;
    }

    .info-banner__container {
      height: {{ section.settings.height_mobile }}px;
      gap: 16px;
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .info-banner__image {
      width: {{ section.settings.image_width_mobile }}px;
    }

    .info-banner__title {
      font-size: {{ section.settings.title_size_mobile }}px;
      margin-bottom: 8px;
    }

    .info-banner__description {
      font-size: {{ section.settings.text_size_mobile }}px;
      line-height: 1.4;
    }

    .info-banner__content {
      white-space: pre-line;
    }
  }

  @media (max-width: 480px) {
    .info-banner__container {
      padding-right: 15px;
    }
  }
</style>

